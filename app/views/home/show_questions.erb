<!--<center>-->
<div class="container">
  <div class="questionbox" style="margin-left: 20px">
    <div class="inside" style="padding: 35px 40px;">
      <div class="col-md-9">
          <div class="titlebox" style="padding-bottom: 5px;">
            <%= @sellected_question.title %>
          </div>
      </div>
  
      <div class="col-md-3">
        <div class="titlebox" >
              <%= @sellected_question.writer %>
              <%= @sellected_question.created_at.to_date %>
        </div>
      </div>
    <br>
      <hr>
    
    
    <div class="contentbox">
      <h4><%= @sellected_question.content.html_safe %></h4>
    </div>
    <div class="row">
      <div class="col-md-9">
          <div class="forempty">
            　
          </div>
      </div>
      <div class="col-md-3">
      <% if user_signed_in? %>
        <% if current_user.id == @sellected_question.user_id %>
          <a class="btn btn-default btn-sm" href="/home/question_write/<%= @sellected_question.id %>">수정</a>
          <button class="btn btn-default btn-sm" data-toggle="modal" data-target=".bs-example-modal-sm" >삭제</button>
        <% end %>
      <% end %>
      </div>
      </div>
  </div>
  </div><br>
  <span class="listbotton" style="margin-top:20px; margin-left:20px">
    <a href="/home/question" class="btn btn-default">목록</a>
  </span>  
</div>
<!--</center>-->

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">WARNNING!</h4>
      </div>
      <div class="modal-body">
        <p>삭제하시겠습니까?&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">취소</button>
        <a href="/destroy/<%= @sellected_question.id %>" class="btn btn-danger">삭제</a>
      </div>
    </div>
  </div>
</div>
<style>
  .modal-header{
    background: red;
    padding-top: 8px !important;
    padding-bottom: 8px !important;
    font-weight: bold;
    color: #fff;
  }
  .modal-footer{
    padding-top: 0px;
    border-top: none;
  }
</style>