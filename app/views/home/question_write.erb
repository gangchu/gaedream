
  
  <div class="container" style="margin-top:40px">
    <form action="/home/write_question" method="post">
      <!--글 수정할 때 적용-->
      <% unless @question.nil? %>
        <input type="hidden" value="<%= @question.id %>" name="id">
      <% end %>
      <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="제목" value="<%= @question.title unless @question.nil? %>">
      </div>
      <textarea id="summernote" name="content" placeholder="내용" rows="4"><%= @question.content unless @question.nil? %></textarea>    
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>





<script type="text/javascript">
  $(document).ready(function() {
    $("#summernote").summernote({
      lang: 'ko-KR',
      height: 200,
      codemirror: {
        lineWrapping: true,
        lineNumbers: true,
        tabSize: 2
      }
    });
 });

 </script>
