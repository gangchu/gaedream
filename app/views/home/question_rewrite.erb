
  
  <div class="container" style="margin-top:40px">
    <form action="/home/write_question" method="post">
      <% Post.all.each do |q| %>
      <input type="hidden" value="<%= q.id %>" name="post_id">
      <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="제목" value="<%= q.title %>">
      </div>
      <textarea id="summernote" name="content" placeholder="내용" rows="4"><%= q.content %></textarea>
      <% end %>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>




<!-- summernote java code -->
<script type="text/javascript">
  $(document).ready(function() {
    $("#summernote").summernote({
      lang: 'ko-KR',
      height: 200,
      codemirror: {
        lineWrapping: true,
        lineNumbers: true,
        tabSize: 2
      }
    });
 });

 </script>
