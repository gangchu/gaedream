<div class="container" style="margin-bottom:100px;">
  <center><br><br><br>
  <h2>회원가입</h2>
  
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  </div>
    
    
  <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
        <div class="field">
          <%= f.label :"이메일" %><br/>
          <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "이메일" %>
        </div>
        </div>
  <div class="col-md-4"></div>
   </div>
  
  <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
        <div class="field">
          <%= f.label :"이름" %><br/>
          <%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "이름" %>
        </div>
        </div>
  <div class="col-md-4"></div>
   </div>
  
  <div class="row">
  <div class="col-md-4"></div>  
  <div class="col-md-4">
        <div class="field">
          <%= f.label :"닉네임" %><br/>
          <%= f.text_field :nickname, autocomplete: "off", autofocus: true, class:"form-control", placeholder: "별명" %>
        </div>
        </div>
  <div class="col-md-4"></div>
   </div>
      
      <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
        <div class="field">
          <%= f.label :"비밀번호" %><br/>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %>자 이상)
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "비밀번호"  %>
        </div>
        </div>
  <div class="col-md-4"></div>
   </div>
      
      <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
        <div class="field">
          <%= f.label :"비밀번호 확인" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "비밀번호 확인" %>
        </div>
        </div>
  <div class="col-md-4"></div>
      </div>
      
        <div class="actions common_login3">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      
      <div class="common_login3">
      <%= render "devise/shared/links" %>
      </div>
</div>