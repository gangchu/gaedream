<%= stylesheet_link_tag    'login_page', media: 'all' %>



  <div class="container common_login">
  <center><br><br><br>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4" style="margin-bottom:10px">
        <div class="field">
          <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"이메일" %>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
    
    
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4" style="margin-bottom:10px">
        <div class="field">
          <%= f.password_field :password, autocomplete: "off" ,class:"form-control", placeholder:"비밀번호" %>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
  
  <div class="row common_login2">
    <div class="col-md-4"></div>
    
    <div class="col-md-2">
    <% if devise_mapping.rememberable? -%>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"비밀번호 저장" %>
      </div>
    <% end -%>
    </div>
    
    <div class="col-md-2 common" >
    <div class="actions">
    <%= f.submit "로그인" %>
    </div>
    </div>
    
    <div class="col-md-4"></div>
  </div>
    
<% end %>


<%= render "devise/shared/links" %>


</center>

</div>

